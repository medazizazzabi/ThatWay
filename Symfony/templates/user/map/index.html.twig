{% extends "user/user.html.twig" %}

{% block main %}

	<link rel="stylesheet" href="{{asset('css/autocomplete.css')}}">
	<div class="row">
		<div class="col-md-4">
			<div>
				<input type="hidden" id="origin" name="placeid"/>
				<input type="hidden" id="destination" name="placeid"/>
				<div class="wrapper mb-4">
					<div class="search-input1">
						<div class="circle from"></div>
						<a href="" target="_blank" hidden></a>
						<input type="text" placeholder="Choose starting point" class="input1">
						<div class="autocom-box1"></div>
						<div class="icon">
							<i class="fa-solid fa-location-crosshairs"></i>
						</div>
					</div>
				</div>
				<div class="wrapper mb-4">
					<div class="search-input">

						<div class="circle to"></div>
						<a href="" target="_blank" hidden></a>
						<input type="text" placeholder="Choose Destination" class="input">
						<div class="autocom-box"></div>
					</div>
				</div>
			</div>
			<div>
				<button class="btn btn-primary w-100 mb-4" id="search-btn">Search</button>
			</div>
			<div class="card mb-4">
				<div class="card-header">
					Route Suggestion :
				</div>
				<div class="card-body">
					<ol class="numbered">
					</ol>
				</div>
			</div>


		</div>

		<div class="col-md-8">
			<div id="map" style="width: 100%; height: 600px;"></div>
		</div>
	</div>
	<script async defer src="https://maps.googleapis.com/maps/api/js?key=&callback=initializeMap"></script>
	<script src="{{asset('js/autocomplete.js')}}"></script>
{% endblock %}
